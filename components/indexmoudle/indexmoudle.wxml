<view class='moudle-group'>
  <view class='moudle-top'>
    <view class='moudle-title'>{{title}}</view>
    <navigator url='{{moreurl}}' class='moudle-more'>更多</navigator>
  </view>

  <scroll-view class='moudle-scroll-view' scroll-x='true'>
    <itemview wx:for='{{items}}' wx:key='{{item.title}}' item='{{item}}' itemurl='../../pages/detail/detail?type={{type}}&id={{item.id}}'></itemview>
  </scroll-view>

</view>