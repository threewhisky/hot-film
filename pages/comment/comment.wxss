/* pages/comment/comment.wxss */
.container{
  padding: 20rpx 30rpx;
  
}

/* 顶部评分区域样式 */
.container .item-rate{
  height: 350rpx;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.item-rate .title{
  font-size: 40rpx;
  text-align: center;
}

/* 评论区域样式 */
.comment-group .comment-title{
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.comment-title text{
  font-size: 24rpx;
  color: #b3b3b3;
  font-weight: bold;
}

/* 换页按钮区域样式 */
.page-btn-group{
  margin: 40rpx 1rpx;
  display: flex;
  justify-content: flex-start;
}
.page-btn-group button{
  flex: 1;
  color: #41be57;
  border-color: #898989;
}