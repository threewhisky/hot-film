/* 头部块样式 */
.item-header{
  padding: 60rpx 30rpx;
}

.item-header .item-title{
  font-size: 50rpx;
}

.item-header .item-detail{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.item-detail .left-detail{
  flex: 1;
  margin-right: 20rpx;
}
.left-detail .item-rate{
  display: flex;
  justify-content: flex-start;
  align-content: center;
  height: 44rpx;
}
.item-rate .comment-persons{
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #ccc;
  line-height: 44rpx;
}
.left-detail .item-sub-detail{
  font-size: 28rpx;
  margin-top: 40rpx;
}
.left-detail .item-sub-detail view{
  margin-bottom: 10rpx;
}

.item-detail .right-detail{
  width: 200rpx;
  height: 300rpx;
}
.right-detail image{
  width: 100%;
  height: 100%;
}


/* 常用标签块样式 */
.item-tags{
  margin: 0 30rpx;
  font-size: 32rpx;
}
.item-tags .item-tags-title{
  color: #b3b3b3;
  margin-bottom: 20rpx;
}
.item-tags .item-tags-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.item-tags-list text{
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  color: #353535;
  text-align: center;
  border-radius: 50rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}


/* 短评块样式 */
.comment-list-group{
  padding: 60rpx 30rpx;
}
.comment-list-group .comment-title{
  font-size: 32rpx;
  font-weight: bold;
}




.more-comment{
  font-size: 36rpx;
  color: #41be57;
  text-align: center;
  margin-bottom: 50rpx;
}